<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Players</th>
      <th>Users</td>
      <th>Game Ended</th>
      <th>Winning Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.players && game.players.map { |p| "#{p.user.username} - #{p.role} - #{p.character}" }.to_sentence %></td>
        <td><%= game.users && game.users.map { |u| u.username }.to_sentence %></td>
        <td><%= game.game_ended %></td>
        <td><%= game.winning_team %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

